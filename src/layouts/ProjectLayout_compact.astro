---
import { siteConfig } from "../config";
import "../styles/global.css";

const { frontmatter } = Astro.props;
---

<html lang="zh-CN">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="description" content={frontmatter.description} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=IBM+Plex+Mono:wght@400;500;600;700&family=Inter:wght@400;500;600;700&family=Noto+Sans+SC:wght@400;500;600;700&display=swap"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/katex@0.16.9/dist/katex.min.css" integrity="sha384-n8MVd4RsNIU0tAv4ct0nTaAbDJwPJzDEaqSD1odI+WdtXRGWt2kTvGFasHpSy3SV" crossorigin="anonymous">
    <title>{frontmatter.title} - {siteConfig.name}</title>
  </head>
  <body class="bg-white">
    <main class="pb-12">
      <article class="max-w-4xl mx-auto px-6 pt-8">
        <!-- HOME按钮 -->
        <div class="mb-6">
          <a href="/" class="text-gray-600 hover:text-purple-600 transition-colors font-medium text-lg tracking-wide">
            HOME
          </a>
        </div>

        <div class="markdown-content">
          <slot />
        </div>
      </article>
    </main>

    <footer class="border-t border-gray-100 py-6">
      <div class="max-w-4xl mx-auto px-6 text-center text-gray-500 text-sm">
        © {new Date().getFullYear()} {siteConfig.name}
      </div>
    </footer>
  </body>
</html>

<style is:global>
  .markdown-content {
    color: #4b5563;
    line-height: 1.4;
    font-family: 'Inter', 'Noto Sans SC', -apple-system, BlinkMacSystemFont, sans-serif;
  }

  /* ========== 标题 - 纯黑色 ========== */
  .markdown-content h1 {
    font-size: 1.75rem;
    font-weight: 600;
    color: #000000;
    margin-bottom: 0.75rem;
    margin-top: 0;
    line-height: 1.3;
  }

  .markdown-content h2 {
    font-size: 1.25rem;
    font-weight: 500;
    color: #000000;
    margin-top: 1.5rem;
    margin-bottom: 0.5rem;
    padding-bottom: 0.375rem;
    border-bottom: 1px solid #e5e7eb;
  }

  .markdown-content h3 {
    font-size: 1rem;
    font-weight: 500;
    color: #000000;
    margin-top: 1.25rem;
    margin-bottom: 0.375rem;
  }

  /* ========== 段落 ========== */
  .markdown-content p {
    margin-bottom: 0.45rem;
  }

  /* ========== 列表 ========== */
  .markdown-content ul {
    list-style: none;
    padding-left: 0;
    margin-bottom: 0.45rem;
  }

  .markdown-content ul li {
    position: relative;
    padding-left: 1.25rem;
    margin-bottom: 0.225rem;
  }

  .markdown-content ul li::before {
    content: "•";
    color: #9333ea;
    font-weight: bold;
    position: absolute;
    left: 0;
  }

  /* ========== 链接 ========== */
  .markdown-content a {
    color: #9333ea;
    text-decoration: none;
    transition: color 0.2s;
  }

  .markdown-content a:hover {
    color: #7e22ce;
    text-decoration: underline;
  }

  /* ========== 加粗 ========== */
  .markdown-content strong {
    color: #111827;
    font-weight: 600;
  }

  /* ========== 行内代码 ========== */
  .markdown-content code:not(pre code) {
    background: #faf5ff;
    color: #9333ea;
    padding: 0.125rem 0.3rem;
    border-radius: 0.25rem;
    font-size: 0.875em;
    font-family: 'IBM Plex Mono', 'SF Mono', Monaco, Consolas, monospace;
  }

  /* ========== 代码块 ========== */
  .markdown-content pre {
    background: #f5f0e8 !important;
    border-radius: 0.5rem;
    padding: 1rem;
    overflow-x: auto;
    margin: 1rem 0;
    border: 1px solid #dcd2c3;
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.05);
  }

  .markdown-content pre code {
    background: transparent !important;
    color: #24292e !important;
    padding: 0;
    font-size: 0.875rem;
    line-height: 1.5;
    font-family: 'Menlo', 'Monaco', 'Consolas', 'Courier New', monospace;
    -webkit-font-smoothing: antialiased;
    font-weight: 500;
  }

  .markdown-content .astro-code {
    background: #f5f0e8 !important;
  }

  /* ========== 表格 ========== */
  .markdown-content table {
    width: 100%;
    border-collapse: collapse;
    margin: 1rem 0;
    font-size: 0.9rem;
    display: block;
    overflow-x: auto;
  }

  .markdown-content th,
  .markdown-content td {
    padding: 0.5rem 1rem;
    text-align: center;
    border: 1px solid #e5e7eb;
  }

  .markdown-content th {
    font-weight: 600;
    color: #111827;
    background-color: #f9fafb;
  }

  .markdown-content td {
    color: #374151;
  }

  .markdown-content tbody tr:hover {
    background: #f9fafb;
  }

  .markdown-content td code,
  .markdown-content th code {
    font-size: 0.85em;
    background: #f3e8ff;
    color: #7e22ce;
    padding: 0.1rem 0.35rem;
    border-radius: 0.2rem;
  }

  /* ========== KaTeX 公式 ========== */
  .markdown-content .katex {
    font-size: 1em;
  }

  .markdown-content p .katex,
  .markdown-content li .katex,
  .markdown-content td .katex {
    margin: 0;
    padding: 0;
  }

  .markdown-content .katex-display {
    margin: 1rem 0;
    overflow-x: visible;
    text-align: center;
  }

  .markdown-content .katex-display > .katex {
    font-size: 1.1em;
  }
</style>